Algoritmo Ejercicio_7
	
	Definir niños, niñas, total Como Entero;
	Definir porcNiños, porcNiñas Como Real;
	
	Escribir "Introduce el Número de Niños en el Curso Actual";
	Leer niños;
	
	Escribir "Introduce el Número de Niñas en el Curso Actual";
	Leer niñas;
	
	total = niños + niñas;
	
	porcNiños = (niños/total)*100;
	porcNiñas = (niñas/total)*100;
	
	Escribir "El Porcentaje de Niños en el Curso Actual es de ", porcNiños,"% y el de Niñas de ", porcNiñas, "%";
	
FinAlgoritmo
